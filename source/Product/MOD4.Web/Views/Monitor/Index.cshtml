<script>

    const vue = new Vue({
        el: '#app',
        data: {
            allInfo: @(Html.Raw(Json.Serialize(Model))),
            isFullscreen: false,
            reRate: 1,
            moveX: 0,
            moveY: 0,
            scrollInterval: null,
            frontAlarms: [],
            backendAlarms: [],
            eqDataInfo:[],
            eqPerfInfo: {
                area: '',
                eqNo: '',
                prod: '',
                passQty: '',
            }
        },
        methods: {
            stopInterval(e) {
                clearInterval(vue.scrollInterval);
            },
            startInterval(e) {
                vue.setScrollInterval();
            },
            pageResize(isResize, isFullscreen) {
                var canvas = document.getElementById("myCanvas");
                var context = canvas.getContext("2d");

                var _divWidth = $("div[name='mapDiv']").width();
                var _divHeight = $("div[name='mapDiv']").height();

                canvas.height = _divHeight;
                canvas.width = _divWidth;

                //alert(_divWidth + '_' + _divHeight);

                var imgObject = new Image();
                imgObject.src = "./img/fabLayoutNew.png";

                imgObject.addEventListener('load', function () {
                    var setW = imgObject.width;
                    var setH = imgObject.height;
                    if ((_divHeight / _divWidth) > (setH / setW)) {
                        vue.reRate = _divWidth / setW;
                        setH = setH * vue.reRate;
                        setW = _divWidth;
                        vue.moveX = 0;
                        vue.moveY = (_divHeight - setH) / 2;
                    }
                    else {
                        vue.reRate = _divHeight / setH;
                        setH = _divHeight;
                        setW = setW * vue.reRate;
                        vue.moveX = (_divWidth - setW) / 2;
                        vue.moveY = 0;
                    }
                    context.drawImage(imgObject, vue.moveX, vue.moveY, setW, setH);
                    if (isFullscreen || vue.moveX != 0 || vue.moveY != 0) {
                        vue.areaResize(vue.moveX, vue.moveY, setW, setH, vue.reRate);
                    }
                    else if (isResize & !isFullscreen) {
                        vue.areaResize(vue.moveX, vue.moveY, setW, setH, vue.reRate);
                    }
                    //context.strokeRect(100, 100, 250, 100);
                });
            },
            areaResize(mX, mY, imgW, imgH, reRate) {

                for (var i = 0; i < vue.eqDataInfo.length; i++) {
                    vue.eqDataInfo[i].top = (vue.eqDataInfo[i].defTopRate * imgH) + mY;
                    vue.eqDataInfo[i].left = (vue.eqDataInfo[i].defLeftRate * imgW) + mX;
                    vue.eqDataInfo[i].width = vue.eqDataInfo[i].defWidth * reRate;
                    vue.eqDataInfo[i].height = vue.eqDataInfo[i].defHeight * reRate;
                }
            },
            showEQInfo(e) {

                vue.eqPerfInfo.area = e.perfInfo.area;
                vue.eqPerfInfo.eqNo = e.perfInfo.eqNo;
                vue.eqPerfInfo.prod = e.perfInfo.prod;
                vue.eqPerfInfo.passQty = e.perfInfo.passQty.toString();

                if (e.perfInfo.alarmMsg != '') {
                    e.background = 'rgba(255, 0, 0,.8)';
                }
                else {
                    e.background = e.background.split('.')[0] + '.8)';
                }
            },
            hideEQInfo(e) {
                e.background = e.origBackground.split('.')[0] + e.defOpacity + ')';

                vue.eqPerfInfo.area = '';
                vue.eqPerfInfo.eqNo = '';
                vue.eqPerfInfo.prod = '';
                vue.eqPerfInfo.passQty = '';
            },
            setScrollInterval() {
                this.scrollInterval = setInterval(function () {
                    vue.setInterval();
                }
                ,100);
            },
