<script type="text/javascript">
    var remarkMin = true,
        remarkHour = true;
    function showClock() {
        var currentDate = new Date();
        var currentHour = (
            (currentDate.getHours() < 10 ? "0" : "") + currentDate.getHours()
        ).split("");
        var currentMin = (
            (currentDate.getMinutes() < 10 ? "0" : "") + currentDate.getMinutes()
        ).split("");
        var currentSec = (
            (currentDate.getSeconds() < 10 ? "0" : "") + currentDate.getSeconds()
        ).split("");

        handleDigitalbodyElement(currentSec, "sec-1", 0);
        handleDigitalbodyElement(currentSec, "sec-2", 1);
        if (currentDate.getSeconds() === 0 || remarkMin) {
            handleDigitalbodyElement(currentMin, "min-1", 0);
            handleDigitalbodyElement(currentMin, "min-2", 1);
            remarkMin = false;
        }
        if (currentDate.getMinutes() === 0 || remarkHour) {
            handleDigitalbodyElement(currentHour, "hour-1", 0);
            handleDigitalbodyElement(currentHour, "hour-2", 1);
            remarkHour = false;
        }
    }
    function handleDigitalbodyElement(targetArray, targetElement, targetIndex) {
        var tmpElement = document.getElementById(targetElement).classList;
        tmpElement.remove(tmpElement.item(2));
        tmpElement.add("num-" + targetArray[targetIndex]);
    }

    setInterval(showClock, 1000);
</script>
