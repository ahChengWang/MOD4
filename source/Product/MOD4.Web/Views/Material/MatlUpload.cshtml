

@{
    ViewBag.Title = "檔案上傳&耗損設定";
}

<style>

    #block {
        border-top: solid #666666 1px;
        border-right: none;
        border-left: none;
        border-bottom: solid #666666 1px;
        border-radius: 15px;
        margin-bottom: 5px;
    }

    #blkTitle {
        padding-left: 1rem;
        width: auto;
        font-size: 20px;
        font-weight: 600;
        color: #666666;
    }

    .card {
        background-color: #c3cadb;
    }

    table[name='myTable'] {
        border-collapse: collapse;
    }

        table[name='myTable'] th, table[name='myTable'] td {
            padding: .5rem;
            border: 1px solid #a5abb0;
            /*border-top: 1px solid #a5abb0;*/
            vertical-align: top;
            text-align: center;
            width: 33%;
        }
</style>

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div id="app" class="card">
                        <div class="card-header">
                            <h3 class="card-title">檔案上傳&耗損設定</h3>
                        </div>
                        <br />
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div>
                            <fieldset id="block">
                                <legend id="blkTitle">SAP檔上傳</legend>
                                <form id="fileForm" enctype="multipart/form-data">
                                    <div class="card-body">
                                        <div class="form-group d-flex align-content-center flex-wrap">
                                            <div class="col-md-1">
                                                @*<span style="font-size:8px;font-weight:700" class="text-danger">*</span>*@
                                                @*<span asp-validation-for="File" style="font-size:10px;font-weight:700" class="text-danger"></span>*@
                                                <div>
                                                    <span class="unit">(允許 .xlsx)</span>
                                                    <br />
                                                    @*<span class="unit">單檔最大2MB</span>*@
                                                </div>
                                            </div>
                                            <div class="col-lg-3 custom-file">
                                                <input type="file" class="custom-file-input" onchange="verifyFile(this)">
                                                <label class="custom-file-label">Choose file</label>
                                            </div>
                                            <br />
                                            <div class="col-lg-2">
                                                <input type="button" class="btn btn-primary" value="上傳" style="float:right" v-on:click="uploadClk()" />
                                            </div>
                                            <div class="col-lg-1">
                                                <input id="btnDownload" type="button" class="btn btn-outline-secondary" value="下載" style="float: right" />
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </form>
                            </fieldset>
                        </div>
                        <br />
                        <div>
                            <fieldset id="block">
                                <legend id="blkTitle">耗損設定</legend>
                                <div class="card-body">
                                    <div class="form-group d-flex align-content-center flex-wrap">
