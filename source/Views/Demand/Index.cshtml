@model List<MOD4.Web.ViewModel.DemanMainViewModel>

@{
    ViewBag.Title = "系統需求單";
}


<style>

    table {
        box-shadow: 2px 2px 2px #999;
    }

    .card {
        box-shadow: 2px 2px 2px #999;
        background-color: #c3cadb;
    }

    .my-control {
        display: initial;
        width: 65%;
        height: calc(2.25rem + 2px);
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        box-shadow: inset 0 0 0 transparent;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    .custom-select {
        width: 70%;
    }

    .dropdown-menu {
        max-height: 300px;
        overflow: scroll;
        overflow-x: hidden;
    }

    #barDiv1 {
        width: 100%;
    }

    .eqimg {
        width: 12px;
        height: 12px;
        margin-top: -2px;
        /*margin-left: -3px;*/
    }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="barDiv1" class="row" style="margin-bottom:5px">
                                <div class="col-3" style="margin-right:0px;">
                                    <label>申請起日：</label>
                                    <input id="startDTE" class="my-control" type="date" name="name" value="" />
                                </div>
                                <div class="col-3" style="margin-right:0px;">
                                    <label>申請訖日：</label>
                                    <input id="endDTE" class="my-control" type="date" name="name" value="" />
                                </div>
                                <div style="margin-right:0px;">
                                    <label>分類：</label>
                                    <select class="my-select" id="dropCat" multiple="multiple">
                                        <option value="1">設定</option>
                                        <option value="2">新增</option>
                                        <option value="3">其他</option>
                                    </select>
                                </div>
                                <div style="margin-left:5px;">
                                    <label>狀態：</label>
                                    <select class="my-select" id="dropStatus" multiple="multiple">
                                        <option value="1">待評估</option>
                                        <option value="2">已退件</option>
                                        <option value="3">進行中</option>
                                        <option value="4">已完成</option>
                                    </select>
                                </div>
                                <div class="row">
                                    <div>
                                        <input id="btnSearch" type="button" class="btn btn-info" style="margin-left:7px" name="name" value="查詢" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div style="float:left">
                                    <a id="btnCreate" class="btn btn-danger btn-sm" style="font-size:15px"><i class="fa fa-plus">建立</i></a>
                                    @*<input id="btnCreate" type="button" class="btn btn-danger" style="margin-left:7px" name="name" value="建立" />*@
                                </div>
                            </div>
                            <div id="divMark">
                                <span style="color:red;font-size:8px">*預設顯示近半年需求申請單</span>
                            </div>
                            <partial name="_PartialTable" model="Model" />
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


@section scripts {
    <script type="text/javascript">

        let myFuc = {
            SearchOrder() {
                $.ajax({
                    url: "./Demand/Search?startDate=" + $("#startDTE").val() + "&endDate=" + $("#endDTE").val() + "&category=" + $("#dropCat").val() + "&status=" + $("#dropStatus").val(),
                    type: "GET",
                    dataType: 'html',
                    success: function (result) {
                        if (isJsonString(result)) {
                            var _res = JSON.parse(result);
                            if (result == '""') {
                                alert('查無資料');
                            }
                            if ('isException' in _res) {
                                alert(_res.msg);
                                return false;
                            }
                        }
                        else {
                            $("#table1_wrapper").remove();
                            $("#divMark").after(result);
                            $('#table1').DataTable({
                                "paging": true,
                                "responsive": false,
                                "lengthChange": true,
                                "autoWidth": true,
                            }).buttons().container().appendTo('#table1_wrapper .col-md-6:eq(0)');

                            $(".status:contains('待評估')").css('color', '#088c01');
                            $(".status:contains('進行中')").css('color', '#145cba');
                            $(".status:contains('已退件')").css('color', '#b00c0f');
                        }
                    }
                });
            },
            CreateOrder() {
                location.href = "./Demand/Create";
            }
        }

        $(function () {
            $('#table1').DataTable({
                "paging": true,
                //"searching": false,
                //"ordering": true,
                //"info": true,
                "responsive": false,
                "lengthChange": true,
                "autoWidth": true,
                //"order": [[5, "asc"]],
                /*"buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]*/
            }).buttons().container().appendTo('#table1_wrapper .col-md-6:eq(0)');

            $("#dropCat,#dropStatus").multiselect({});

            $(".status:contains('待評估')").css('color', '#088c01');
            $(".status:contains('進行中')").css('color', '#145cba');
            $(".status:contains('已退件')").css('color', '#b00c0f');

        });

        $("#btnSearch").click(myFuc.SearchOrder);

        $("#btnCreate").click(myFuc.CreateOrder);

        function editClick(id, orderId) {
            location.href = "./Demand/Edit?sn=" + id + "&orderId=" + orderId;
        }

        function detailClick(id) {
            $.ajax({
                url: "./Demand/Detail?sn=" + id,
                type: 'GET',
                dataType: 'html',
                success: function (result) {
                    if (isJsonString(result)) {
                        var _res = JSON.parse(result);
                        alert(_res.msg);
                        dismissModal();
                        return false;
                    }
                    else {
                        $('body').addClass('modal-open');
                        var ele = $('body').find('.modal-backdrop');
                        if (ele.length == 0) {
                            $('body').append('<div class="modal-backdrop fade show"></div>');
                        }
                        $('#detailModal').html(result);
                        $('#detailModal').addClass('show');
                        $('#detailModal').css('display', 'block');
                    }
                }
            });
        }

        function dismissModal() {
            $('body').removeClass('modal-open');
            $('body').css({ 'padding-right': ''});
            $('#detailModal').removeClass('show');
            $('#detailModal').css('display', 'none');
            $('.modal-backdrop').remove();
            $('.modal-dialog').remove();
        }

    </script>
}

