@model MOD4.Web.ViewModel.DemanEditViewModel

@{
    ViewBag.Title = "編輯需求單";
}


<style>

    .card {
        box-shadow: 1px 2px 2px 2px #999;
        margin-top: 5px;
    }

    .card-header, .card-body, .card-footer {
        background-color: #c3cadb;
    }

    .card-title {
        font-family: "Microsoft JhengHei";
        font-weight: 900;
        font-style: italic;
        font-size: 30px;
    }

    .custom-file-label {
        left: 8px;
    }

    .unit {
        font-size: 8px;
        color: darkred;
    }

    label[name="underline"] {
        text-decoration: underline;
    }
</style>

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">編 輯 需 求 單</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form id="demandForm">
                            <div class="card-body">
                                <div class="form-group" style="display:flex">
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="OrderId"></label>
                                    </div>
                                    <div class="col-2">
                                        <label class="col-form-label" name="underline">@Model.OrderId</label>
                                    </div>
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="CreateDate"></label>
                                    </div>
                                    <div class="col-2">
                                        <label class="col-form-label" name="underline">@Model.CreateDate</label>
                                    </div>
                                </div>
                                <div class="form-group" style="display:flex">
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="DemandCategory"></label>
                                    </div>
                                    <div class="col-2">
                                        <label class="col-form-label" name="underline">@Model.DemandCategory</label>
                                    </div>
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="DemandStatus"></label>
                                    </div>
                                    <div class="col-2">
                                        <label class="col-form-label" name="underline">@Model.DemandStatus</label>
                                    </div>
                                </div>
                                <div class="form-group" style="display:flex">
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="Subject"></label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" disabled class="form-control" asp-for="Subject">
                                    </div>
                                </div>
                                <div class="form-group" style="display: flex;">
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="Content"></label>
                                    </div>
                                    <div class="col-9">
                                        <textarea disabled class="form-control" rows="4" asp-for="Content"></textarea>
                                    </div>
                                </div>
                                <div class="form-group" style="display:flex">
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="Applicant"></label>
                                    </div>
                                    <div class="col-2">
                                        <input type="text" disabled class="form-control" asp-for="Applicant">
                                    </div>
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="JobNo"></label>
                                    </div>
                                    <div class="col-2">
                                        <input type="text" disabled class="form-control" maxlength="8" asp-for="JobNo">
                                    </div>
                                </div>
                                <div class="form-group" style="display:flex">
                                    <div class="col-2">
                                        <label class="col-form-label" asp-for="UploadFile1"></label>
                                    </div>
                                    <div class="col-3 custom-file">
                                        @{
                                            if (Model.UploadFile1 == "")
                                            {
                                                <a href="#"><label class="custom-file-label">@Model.UploadFile1</label></a>
                                            }
                                            else
                                            {
                                                <a target="_blank" href="/Demand/Download?orderSn=@Model.OrderSn&fileNo=0">
                                                    <label class="custom-file-label">@Model.UploadFile1</label>
                                                </a>
                                            }
                                        }
                                    </div>
                                    <div class="col-3 custom-file">
                                        @{
                                            if (Model.UploadFile2 == "")
                                            {
                                                <a href="#"><label class="custom-file-label">@Model.UploadFile2</label></a>
                                            }
                                            else
                                            {
                                                <a target="_blank" href="/Demand/Download?orderSn=@Model.OrderSn&fileNo=1">
                                                    <label class="custom-file-label">@Model.UploadFile2</label>
                                                </a>
                                            }
                                        }
                                    </div>
                                    <div class="col-3 custom-file">
                                        @{
                                            if (Model.UploadFile3 == "")
                                            {
                                                <a><label class="custom-file-label">@Model.UploadFile3</label></a>
                                            }
                                            else
                                            {
                                                <a target="_blank" href="/Demand/Download?orderSn=@Model.OrderSn&fileNo=2">
                                                    <label class="custom-file-label">@Model.UploadFile3</label>
                                                </a>
                                            }
                                        }
                                    </div>
                                </div>
                                <hr style="border-width:3px;border-color:gray" />

                                @{
                                    if (@Model.DemandStatusId == 1)
                                    {
                                        <div class="form-group" style="display: flex;">
                                            <div class="col-2">
                                                <label class="col-form-label" asp-for="RejectReason"></label>
                                            </div>
                                            <div class="col-9">
                                                <textarea class="form-control" rows="4" asp-for="RejectReason"></textarea>
                                            </div>
                                        </div>
                                    }
                                    else if (@Model.DemandStatusId == 3)
                                    {
                                        <div class="form-group" style="display:flex">
                                            <div class="col-2">
                                                <label class="col-form-label" asp-for="UploadFile"></label>
                                                <span asp-validation-for="UploadFile" style="font-size:10px;font-weight:700" class="text-danger"></span>
                                                <div>
                                                    <span class="unit">(允許 xls,xlsx,docx,jpg,png,jpeg)</span>
                                                    <br />
                                                    <span class="unit">單檔最大2MB</span>
                                                </div>
                                            </div>
                                            <div class="col-3 custom-file">
                                                <input type="file" class="custom-file-input" asp-for="UploadFile" onchange="verifyFile(this)">
                                                <label class="custom-file-label">Choose file</label>
                                            </div>
                                            <div class="col-3 custom-file">
                                                <input type="file" class="custom-file-input" asp-for="UploadFile" onchange="verifyFile(this)">
                                                <label class="custom-file-label">Choose file</label>
                                            </div>
                                            <div class="col-3 custom-file">
                                                <input type="file" class="custom-file-input" asp-for="UploadFile" onchange="verifyFile(this)">
                                                <label class="custom-file-label">Choose file</label>
                                            </div>
                                        </div>
                                    }
                                }

                            </div>
                            <div class="card-footer" style="display:flex">
                                <!-- /.card-body -->
                                @{
                                    if (@Model.DemandStatusId == 1)
                                    {
                                        <div>
                                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-sm-success">
                                                核准
                                            </button>
                                            @*<input id="btnSave" type="button" class="btn btn-success" value="核准" />*@
                                        </div>
                                        <div style="margin-left:8px">
                                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal-sm-rej">
                                                駁回
                                            </button>
                                            @*<input id="btnReject" type="button" class="btn btn-warning" value="駁回" />*@
                                        </div>
                                    }
                                    else if (@Model.DemandStatusId == 3)
                                    {
                                        <div>
                                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-sm-success">
                                                完成
                                            </button>
                                            @*<input id="btnSave" type="button" class="btn btn-success" value="核准" />*@
                                        </div>
                                    }
                                }
                            </div>
                            <input type="hidden" asp-for="OrderSn" value="@Model.OrderSn" />
                            <input type="hidden" asp-for="OrderId" value="@((string)Model.OrderId)" />
                        </form>
                        <div class="modal fade" id="modal-sm-success">
                            <div class="modal-dialog modal-sm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>確認核准?</p>
                                    </div>
                                    <div class="modal-footer justify-content-between">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">否</button>
                                        <input id="btnSave" type="button" class="btn btn-success" value="確認" />
                                    </div>
                                </div>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>
                        <div class="modal fade" id="modal-sm-rej">
                            <div class="modal-dialog modal-sm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>確認駁回?</p>
                                    </div>
                                    <div class="modal-footer justify-content-between">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">否</button>
                                        <input id="btnReject" type="button" class="btn btn-warning" value="確認" />
                                    </div>
                                </div>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>
                        <!-- /.modal -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script type="text/javascript">

    $("#btnSave").click(function () {
        $.blockUI({
            message: '請稍等...',
            css: {
                border: 'none',
                padding: '5px',
                backgroundColor: '#000',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                opacity: '.5',
                color: '#fff',
                fontSize: '25px',
                fontFamily: '微軟正黑體',
                fontWeight: 300,
            }
        });
        $.ajax({
            type: "POST",
            url: "/Demand/EditToProcess",
            dataType: 'json',
            data: $("#demandForm").serialize(),
            success: function (result) {
                $.unblockUI();
                if (result.isSuccess) {
                    alert(result.msg);
                    location.href = "@Url.ActionLink("Index", "Demand")";
                }
                else {
                    alert(result.msg);
                }
            }
        });
    });


    $("#btnReject").click(function () {
        var _rr = $("#RejectReason").val();
        if (_rr == "") {
            alert("駁回原因必填");
            return false;
        }

        $.blockUI({
            message: '請稍等...',
            css: {
                border: 'none',
                padding: '5px',
                backgroundColor: '#000',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                opacity: '.5',
                color: '#fff',
                fontSize: '25px',
                fontFamily: '微軟正黑體',
                fontWeight: 300,
            }
        });
        $.ajax({
            type: "POST",
            url: "/Demand/EditToReject",
            dataType: 'json',
            data: $("#demandForm").serialize(),
            success: function (result) {
                $.unblockUI();
                if (result.isSuccess) {
                    alert(result.msg);
                    location.href = "@Url.ActionLink("Index", "Demand")";
                }
                else {
                    alert(result.msg);
                }
            }
        });
    });
</script>