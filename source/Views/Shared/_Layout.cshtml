    <script type="text/javascript">
        $(document).ready(function () {
            let _pathArray = location.pathname.split('/');
            let _locationPathname = "/" + _pathArray[1] + "/" + _pathArray[2];
            if (_pathArray.length > 3 && (_pathArray[3] == "Audit" || _pathArray[3] == "Setting" || _pathArray[3] == "Dashboard")) {
                _locationPathname = _locationPathname + "/" + _pathArray[3];
            }
            //$("a[class='nav-link active']").removeClass('active').removeAttr('aria-current');
            $("a[name='nava']").removeClass('active').removeAttr('aria-current');
            $('a[href="' + _locationPathname + '"]').addClass('active').attr('aria-current', 'page');
            $('a[href="' + _locationPathname + '"]').parent().parent().parent().addClass('menu-is-opening menu-open');
            $('a[href="' + _locationPathname + '"]').parent().parent().parent().children('a:first').addClass('active').attr('aria-current', 'page');
        });

